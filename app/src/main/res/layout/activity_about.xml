<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="248dp"
                android:layout_height="234dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ss"
                app:srcCompat="@drawable/ss"
                tools:srcCompat="@drawable/ss" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:fontFamily="serif-monospace"
                android:text="\nSourav Sen Gupta\n 182-15-11392\nDaffodil International University\n Section : A\n I am doing fullstack Web Development.\n\nAbout TravellersBD:\n\nTravellersBD is an application which will provide informations of all travelling agencies with some important information of Bangladesh. Website of every agencies is also available.\n\nThank You.\n\n."
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>