<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FBFB"
    tools:context=".radission">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E9F3F4"
            android:gravity="center"
            >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:src="@drawable/radission"
            tools:srcCompat="@drawable/radission" />

            <androidx.cardview.widget.CardView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                >
                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Radisson Blu Dhaka Water Garden"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="25dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="35dp"
                android:layout_gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating:"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:layout_weight="600"
                    android:textSize="20dp"
                    />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="#D5B600"
                    android:rating="5"
                    android:stepSize="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Offers:"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:textFontWeight="900"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                >
                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="#A3FA1414"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="5000 BDT per night with the spicy Avijit Rpy"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Radisson Blu Dhaka Water Gardenhttps://guides.codepath.com/android/Working-\nwith-the-EditText#changing-the-bottom-line-colorhttps://guides.codepath.com/android/Working-with-the-EditText#changing-the-bottom-line-colorhttps://guides.codepath.com/android/Working-with-the-EditText#changing-the-bottom-line-color"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="10dp"
                    android:layout_marginRight="50dp"
                    >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:text="Call"
                    />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="50dp"
                    >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:text="visite"
                    />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>